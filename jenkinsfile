pipeline {
    agent any

    environment {
        // GitHub PAT credential ID
        GITHUB_TOKEN = credentials('github-token')
        IMAGE_NAME = "yourusername/todo-frontend:latest"
        CONTAINER_NAME = "todo-frontend"
    }

    tools {
        // NodeJS installation configured in Jenkins (Name: nodejs18)
        nodejs "nodejs18"
    }

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/yourusername/your-repo.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('src') {
                    sh 'npm install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('tests') {
                    sh 'npm test || echo "Tests completed"'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }

        stage('Run Docker Container') {
            steps {
                // Stop existing container if running
                sh "docker rm -f ${CONTAINER_NAME} || true"

                // Run container
                sh "docker run -d -p 5000:5000 --name ${CONTAINER_NAME} ${IMAGE_NAME}"
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully! Docker container is running."
        }
        failure {
            echo "Pipeline failed. Check logs for errors."
        }
    }
}
